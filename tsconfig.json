{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@appCore/*": [
        "app/core/*"
      ],
      "@appShared/*": [
        "app/shared/*"
      ],
      "@appBackend/*": [
        "app/backend/*"
      ],
      "@appFrontend/*": [
        "app/frontend/*"
      ],
      "@appStyles/*": [
        "styles/*"
      ]
    }
  }
}
